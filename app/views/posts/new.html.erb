<h2>New Post</h2>

<% if @user != nil %>
  <form action="/posts" method="post">
    <div class="mb-3">
      <label for="body_input" class="form-label">Body</label>
      <input type="text" name="body" id="body_input" class="form-control">
    </div>

    <div class="mb-3">
      <label for="image_input" class="form-label">Image URL</label>
      <input type="text" name="image" id="image_input" class="form-control">
    </div>

    <button class="btn btn-primary">Save</button>
    <a href="/posts">Cancel</a>
  </form>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>
